@model IEnumerable<Screenplay>

<h1>@ViewData["Title"]</h1>
<p>List of all screenplays available</p>
<a  class="btn btn-success" asp-action="Create" asp-controller="Screenplay">Add new Screenplay</a>

<div class="list-container">
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var screenplay in Model)
            {
                <tr>
                    <td><a asp-action="Detail" asp-controller="Screenplay" asp-route-id="@screenplay.Id">@screenplay.Title</a></td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="Screenplay" asp-route-id="@screenplay.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Screenplay" asp-route-id="@screenplay.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>