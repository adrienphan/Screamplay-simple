@model IEnumerable<Character>

<h1>@ViewData["Title"]</h1>
<p>Les différents personnages apparaissant dans le scénario</p>

<a asp-controller="Character" asp-action="Create" class="btn btn-success">Add New Character</a>

<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Modifier</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var character in Model)
        {
            <tr>
                <td><a asp-controller="Character" asp-action="Detail" asp-route-id="@character.Id">@character.Name</a></td>
                <td>@character.Description</td>
                <td><button>Modifier</button></td>
            </tr>
        }
    </tbody>
</table>